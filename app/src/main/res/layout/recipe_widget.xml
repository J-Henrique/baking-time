<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/widget_margin">

   <ImageView
       android:id="@+id/bowl_icon_image_view"
       android:src="@drawable/ic_bowl"
       android:layout_gravity="center_horizontal"
       android:layout_width="50dp"
       android:layout_height="50dp" />

    <TextView
        android:id="@+id/widget_recipe_name_text_view"
        android:textColor="@color/defaultText"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/widget_recipe_ingredients_list_view"
        tools:listitem="@layout/widget_list_item"
        android:divider="#FFFFFF"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <TextView
        android:id="@+id/widget_recipe_ingredients_text_view"
        android:textColor="@color/defaultText"
        android:paddingTop="4dp"
        android:paddingLeft="6dp"
        android:textSize="14dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>